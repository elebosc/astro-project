---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("../posts/*.md");
const uniqueTags = [...new Set(allPosts.flatMap((post) => post.frontmatter.tags))]
---

<BaseLayout pageTitle={"Indice dei tag"}>
    <div class="flex flex-wrap space-x-2 my-5   ">
        {uniqueTags.map((tag) => 
            <p class="border border-gray-500 rounded-xl px-4 py-2">
                <a class="text-primary" href={tag}>{tag}</a>
            </p>
        )}
    </div>
</BaseLayout>
