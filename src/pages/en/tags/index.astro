<BaseLayout pageTitle={"Tag Index"}>
    <div class="row row-cols-auto">
        {uniqueTags.map((tag) => 
            <p class="border rounded px-3 py-2 mx-1"><a class="text-decoration-none" href={tag}>{tag}</a></p>
        )}
    </div>
</BaseLayout>
